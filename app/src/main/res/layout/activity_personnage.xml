<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <android.support.design.widget.AppBarLayout

        android:id="@+id/appbarid"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:elevation="0dp"
        android:gravity="center" >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:padding="20px"
            android:text="Hero of my life"
            android:textColor="@android:color/background_light"
            android:textSize="24sp" />

    </android.support.design.widget.AppBarLayout>

            <LinearLayout
                android:id="@+id/linear_perso"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/appbarid">
                <ImageView
                    android:src="@drawable/mage"
                    android:id = "@+id/image_personnage"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:scaleType= "fitStart"
                    android:adjustViewBounds="true"
                    android:layout_margin="@dimen/text_margin"/>
                <TableLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2">
                    <TableRow>



                    <TextView
                        android:id = "@+id/class_personnage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:textSize="30dp"/>
                    <TextView
                        android:id = "@+id/niveau_personnage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/niveau"
                        android:layout_column="1"
                        android:textSize="20dp"
                        android:padding="@dimen/fab_margin"/>
                    </TableRow>
                    <TableRow>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:text="@string/exp"
                            android:textSize="30dp" />

                        <ProgressBar
                            android:minWidth="100dp"
                            android:id="@+id/exp_progress"
                            style="@android:style/Widget.ProgressBar.Horizontal"
                            android:layout_marginTop="15dp"
                            android:max="100"/>


                    </TableRow>


                </TableLayout>

            </LinearLayout>
<TableLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@id/linear_perso">
    <TableRow>


        <TextView
            android:id="@+id/text_pv"
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="2"
            android:text="PV :"
            android:textSize="30dp" />

        <ProgressBar
            android:id="@+id/pv_progress"

            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_alignRight="@id/text_pv"
            android:layout_column="2"
            android:layout_marginTop="15dp"
            android:minWidth="150dp" />
    </TableRow>
    <TableRow>


        <TextView
            android:id="@+id/text_face"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Force : "
            android:layout_column="1"
            android:layout_row="2"

            android:textSize="30dp"

            />

    </TableRow>
    <TableRow>


        <TextView
            android:id="@+id/text_intelligence"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Int :"
            android:layout_column="1"
            android:layout_row="2"
            android:textSize="30dp"
            />

    </TableRow>
    <TableRow>


        <TextView
            android:id="@+id/text_agi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AgilitÃ© :"
            android:layout_column="1"
            android:layout_row="2"
            android:textSize="30dp"
            />

    </TableRow>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/nav_Equipement"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:padding="10dp"
            android:onClick="chargerPage"
            android:src="@drawable/plus"
            android:text="@string/equipement_menu"
            app:backgroundTint="#303F9F" />



            <android.support.design.widget.FloatingActionButton
                android:id="@+id/nav_Familier"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:padding="10dp"
                android:drawableLeft="@drawable/cat"
                android:onClick="chargerPage"
                android:src="@drawable/cat"
                android:text="@string/familer_menu"
                app:backgroundTint="#303F9F" />






</TableLayout>
    </RelativeLayout>


    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:menu="@menu/drawer"/>
</android.support.v4.widget.DrawerLayout>