<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="top">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <ImageButton
            android:id="@+id/btnSuppressionReg"
            android:layout_width="50dp"
            android:layout_height="48dp"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/checkboxRegulier"
            android:layout_marginStart="11dp"
            android:background="@drawable/circle"
            android:onClick="onDelete"
            android:padding="10dp"
            android:src="@drawable/delete" />

        <TextView
            android:id="@+id/name"
            android:layout_width="367dp"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/btnSuppressionReg"
            android:padding="10dp"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/description"
            android:layout_width="299dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/name"
            android:layout_marginTop="34dp"
            android:padding="@dimen/fab_margin"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/difficulte"
            android:layout_width="118dp"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/name"
            android:padding="@dimen/fab_margin"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/categorie"
            android:layout_width="136dp"
            android:layout_height="58dp"
            android:layout_alignBaseline="@+id/name"
            android:layout_toEndOf="@+id/difficulte"
            android:textSize="20sp" />


        <CheckBox
            android:id="@+id/checkboxRegulier"
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:onClick="onSelected" />
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>