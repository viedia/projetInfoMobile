<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.pm.heroofmylife.EquipementActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <android.support.design.widget.AppBarLayout

        android:id="@+id/appbarid"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:elevation="0dp"
        android:gravity="center" >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:padding="20px"
            android:text="Hero of my life - Équipement"
            android:textColor="@android:color/background_light"
            android:textSize="24sp" />

    </android.support.design.widget.AppBarLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/appbarid"
            android:orientation="vertical"
            android:weightSum="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.1"
                android:orientation="horizontal"
                android:weightSum="4">
                <TextView
                    android:id="@+id/text_argent"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Argent: "
                    android:padding="11dp"
                    android:layout_marginTop="3dp"/> <!-- Text Argent -->
                
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3">

                    <TextView
                        android:id="@+id/text_pv"
                        android:layout_width="0dp"
                        android:layout_weight="0.2"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/perso_margin_left"
                        android:text="PV :"
                        android:textSize="@dimen/text_perso"
                        android:padding="9dp"/> <!-- "PV: " -->

                    <ProgressBar
                        android:layout_width="0dp"
                        android:layout_weight="0.87"
                        android:layout_height="wrap_content"
                        android:id="@+id/pv_progress"
                        style="@android:style/Widget.ProgressBar.Horizontal"
                        android:layout_marginTop="6dp"
                        android:minWidth="150dp"
                        android:padding="9dp"/> <!-- PV bar -->

                </LinearLayout> <!-- PV -->

                
            </LinearLayout> <!-- Entête -->

            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="100dp"

                android:orientation="vertical"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:weightSum="4">

                <!-- Potion Buton -->

                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/PotionButton"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:onClick="Potion"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/potion"
                    android:text="LIFE POTION"
                    app:backgroundTint="#303F9F" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1"
                    android:text="Potion" /> <!-- Potion Text -->

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:weightSum="4"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="30"
                        android:textStyle="bold"
                        android:textSize="@dimen/text_resources_equipement"/> <!-- resources number Text -->

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:src="@drawable/dollar"/> <!-- picture gold -->

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="60"
                        android:layout_marginLeft="@dimen/perso_margin_left"
                        android:textStyle="bold"
                        android:textSize="@dimen/text_resources_equipement"/> <!-- resources number Text -->

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:src="@drawable/heart"/> <!-- picture gold -->


                </LinearLayout>

            </LinearLayout> <!-- Potion Buton -->

        </LinearLayout><!-- Fenetre -->





    </RelativeLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:menu="@menu/drawer"
        />

</android.support.v4.widget.DrawerLayout>
